version: '3.8'

services:
  n8n:
    image: n8nio/n8n:latest
    container_name: n8n-local
    restart: always
    ports:
      - "5678:5678"
    volumes:
      - ${HOME}/.n8n:/home/node/.n8n
    env_file:
      - .env
    environment:
      - TZ=Asia/Shanghai
      - N8N_BLOCK_ENV_ACCESS_IN_NODE=false
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:5678/healthz"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
