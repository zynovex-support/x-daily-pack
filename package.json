  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^2.1.0",
    "dotenv": "^16.4.0",
    "msw": "^2.6.0",
    "promptfoo": "^0.120.17",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
