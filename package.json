{
  "name": "x-daily-pack",
  "version": "1.0.0",
  "description": "AI Daily News Automation System",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/suites/unit",
